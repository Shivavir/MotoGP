
@{
    ViewBag.Title = "TicketRegistration";
    Layout = "~/Views/Shared/Master_Layout.cshtml";
}

<div>
    <div class="signup-container">
        <h2>Ticket Registration</h2>
        <p id="response">@ViewBag.msg</p>
        <form method="POST" class="form" action="/Home/TicketRegistration">

            <label for="name">Name</label>
            <input type="text" id="name" placeholder="Enter your name" style="width:300px;" required />

            <label for="address">Address</label>
            <input type="text" id="address" placeholder="Enter your address" required />

            <label for="mobile">Mobile Number</label>
            <input type="number" id="mobile" placeholder="Enter your mobile no." style="width:300px;" required />

            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="example@email.com" required />

            <span id="SendOtp" style="cursor:pointer;"> &#10003; Send OTP</span>

            <label for="otp">OTP</label>
            <input type="password" id="otp" name="otp" placeholder="Enter the OTP" required />

            <input type="submit" onclick="validateForm()" class="submitbtn" value="Proceed" />
            <!--
            <a class="submitbtn" type="submit" onclick="return validateForm()">Proceed</a>
            -->

        </form>

        <script>

            $(document).ready(function () {

                //To Send OTP for registration

                $("#SendOtp").click(function () {

                    var useremail = $("#email").val().trim();

                    if (useremail.length == 0) {
                        alert("Enter Email");
                        return false;
                    }

                    var obj = { email: useremail };
                    $.ajax({
                        type: "POST",
                        url: "/Home/SendOTP",
                        data: obj,
                        dataType: "json",
                        success: function (message) {
                            if (message === "SUCCESS") {
                                alert("OTP has been send successfully.");
                            }
                            else {
                                alert("Invalid emailid or usertype.please enter valid data");
                            }
                        }

                    });
                });

            });

        </script>

    </div>
</div>


